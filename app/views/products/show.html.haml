%body  
  .main
    .showMain
      .contentRight
        .topContent
          .itemBox
            %h2.itemBox__name= @product.name
            .itemBox__body
              %ul
                %li
                  = image_tag @product.images.first.image.url, alt: "エラー",class: "productimage"
                  -if @product.status == "sold"
                    %figcaption
                      .sold-out-tag
                        %div SOLD
                  %ul
                    - @images.each do |image|
                      %li
                        = image_tag image.image.url, alt: "エラー"
            .itemBox__price
              %span ¥#{@product.price}
              .itemBox__price-detail
                %span （税込）
                %span 送料込み
            .itemDetail= @product.description
            .table
              %table
                %tbody
                  %tr
                    %th 出品者
                    %td= @product.user.nickname
                  %tr
                    %th カテゴリー
                    %td
                      = link_to(@large.name, "#")
                      %br
                      = link_to(@midium.name, "#")
                      %br
                      = link_to(@small.name, "#")
                  %tr
                    %th ブランド
                    %td= @product.brand
                  %tr
                    %th 商品のサイズ
                    %td
                  %tr
                    %th 商品の状態
                    %td= @product.condition
                  %tr
                    %th 配送料の負担
                    %td= @product.send_price
                  %tr
                    %th 発送元の地域
                    %td= @product.prefecture.name
                  %tr
                    %th 発送日の目安
                    %td= @product.ship_day
              %ul
                %li
              - if user_signed_in? && current_user.id == @product.user_id
                = link_to '削除する', product_path, method: :delete, data: {confirm: "本当に削除しますか？"},class: "seller-btn"
                = link_to '編集する', edit_product_path, method: :get,class: "seller-btn"
              - elsif @product.status == "sold"
                %p 売り切れました
              - else  
                = link_to '購入画面に進む', new_product_contract_path(@product), method: :get,class: "buyer-btn"
            .optionalArea
              %ul
                %li.optionalBtn.likeBtn
                  %i.fa.fa-star
                  お気に入り ０
              %ul.optional
                %li.optionalBtn
                  = link_to '#' do
                    %i.fa.fa-flag
                    不適切な商品の通報
        %ul.links
          %li
            = link_to "#", class: "link" do
              %i.fa.fa-angle-left
              前の商品
          %li
            = link_to "#", class: "link" do
              %i.fa.fa-angle-right
              次の商品
        .relatedItems
          = link_to 'もっと見る',"#",class:"link"
          .productLists
            - @related_products.each do |product|
              .productList
                = link_to product_path(product.id), method: :get, class: "sed" do           
                  .productList--img
                    = image_tag product.images.first.image.url, alt: "エラー"
                  .productList--body
                    %h3.name= product.name
                    .details 
                      %ul
                        %li ¥#{product.price}
                        %li
                          %i.fa.fa-star.likeIcon{style: :"user-select: auto;"}
                          0
                      %p (税込) 
