.current__tilte
  .paysystem__title__name
    %h2 クレジットカード情報
  .paysystem__title__credit-cards
    - if @card.present?
      .paysystem__title__credit-cards__list
        = form_with url: card_path(@card.id), method: :delete, local: true, id: 'charge-form' do |f|
          .paysystem__title--credit-cards__list--pay-num
            = "**** **** **** " + @card_information.last4
          .paysystem__title--credit-cards__list--pay-num
            - exp_month = @card_information.exp_month.to_s
            - exp_year = @card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
          %input{type: "hidden", name: "card_id", value: ""}
          = f.submit "削除する", {class: "content__title__credit-cards__list__remove"}
    -else
      %h5 カード情報がありません

= render 'items/exhibitionBotton'