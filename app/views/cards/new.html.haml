.paysystem
  .paysystem__title
    %h1 クレジットカード情報入力
  .paysystem__credit-card
    .paysystem__credit-card__inner
      = form_with url: cards_path, method: :post, html: { name: "inputForm" } do |f| 
        .cards-number
          = f.label :カード番号, class: 'label'
          %span.form_require 必須
          = f.text_field :card_number, type: 'text', class: 'input-number', id: "card_number", placeholder: '半角数字のみ', maxlength: "16"
        %ul.signup-card-list
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1398199435',size: "49x20"
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1398199435',size: "34x20"
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1398199435',size: "30x20"
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1398199435',size: "32x20"
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1398199435',size: "21x20"
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1398199435',size: "31x20"
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1398199435',size: "31x20"
        .cards-expire
          = f.label :有効期限, class: 'label'
          %span.form_require 必須
          %br
          .cards-expire__content
            .cards-expire__wrap
              = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class:   'input-expire', id: "exp_month"
              %span.expire-text 月
              %br/
            .cards-expire__wrap
              = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29", 2029]],{} , class: 'input-expire', id: "exp_year"
              %span.expire-text 年
        .cards-expire
          = f.label :セキュリティコード, class: 'label'
          %span.form_require 必須
          = f.text_field :cvc, type: 'text', class: 'input-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4", id: "cvc"
        .paysystem-bottom#card_token
          = f.submit '登録する', class: 'content-bottom--add-btn', id: 'token_submit'
          
= render 'items/exhibitionBotton'
