%body  
  %header
    .headerInner
      .mainHeader
        %h1.appIcon
          = link_to root_path, class: "hed" do
            = image_tag 'logo.png', alt: 'ロゴ'
        .searchBox
          %form(action="#" method="get")
            %input{name: :"utf8", style: :"user-select: auto;", type: :"hidden", value: :"✓"}/
            %input#searchInput(type="text" class="input"  name="key" placeholder="キーワードから探す")/
            %button(type="submit")
              .searchIcon
                = image_tag 'icon-search 1.png', alt: 'サーチロゴ'
        %ul.resultLists
      .nav
        %ul.leftLists
          %li.leftLists-item.leftLists-item-first
            = link_to "カテゴリー", '#'
            .tree.displayNone
              %ul.categoryTree
                %li.categoryTree__item
                  = link_to "レディース", '#'
                %li.categoryTree__item
                  = link_to "メンズ", '#'
                %li.categoryTree__item
                  = link_to "ベビー・キッズ", '#'
                %li.categoryTree__item
                  = link_to "インテリア・住まい・小物", '#'
                %li.categoryTree__item
                  = link_to "本・音楽・ゲーム", '#'
                %li.categoryTree__item
                  = link_to "おもちゃ・ホビー・グッズ", '#'
                %li.categoryTree__item
                  = link_to "コスメ・香水・美容", '#'
                %li.categoryTree__item
                  = link_to "家電・スマホ・カメラ", '#'
                %li.categoryTree__item
                  = link_to "スポーツ・レジャー", '#'
                %li.categoryTree__item
                  = link_to "ハンドメイド", '#'
                %li.categoryTree__item
                  = link_to "チケット", '#'
                %li.categoryTree__item
                  = link_to "自動車・オートバイ", '#'
                %li.categoryTree__item
                  = link_to "その他", '#'
          %li.leftLists-item
            = link_to "ブランド", '#'
            %ul.brandsPulldown.displayNone
        %ul.rightLists
          %li.rightLists-link.rightLists-link-login
            = link_to "ログイン", login_path
          %li.rightLists-link.rightLists-link-new
            = link_to "新規会員登録", signup_path
  .main
    .showMain
      .contentRight
        .topContent
          .itemBox
            %h2.itemBox__name サンプル
            .itemBox__body
              %ul
                %li
                  %img/
                  %ul
                    %li
                      %img/
                    %li
                      %img/
                    %li
                      %img/
            .itemBox__price
              %span ¥300
              .itemBox__price-detail
                %span （税込）
                %span 送料込
            .itemDetail
              商品詳細　サンプル
            .table
              %table
                %tbody
                  %tr
                    %th 出品者
                    %td ？？？
                  %tr
                    %th カテゴリー
                    %td
                      = link_to('ベビー・キッズ', "#")
                      %br/
                      = link_to('ベビー服(男女兼用) ~95cm', "#")
                      %br/
                      = link_to('アウター', "#")
                  %tr
                    %th ブランド
                    %td
                  %tr
                    %th 商品のサイズ
                    %td
                  %tr
                    %th 商品の状態
                    %td 未使用に近い
                  %tr
                    %th 配送料の負担
                    %td
                      = link_to('東京都',"#")
                  %tr
                    %th 発送元の地域
                    %td 送料込み（出品者負担）
                  %tr
                    %th 発送日の目安
                    %td 4-7日で発送
            .optionalArea
              %ul
                %li.optionalBtn.likeBtn
                  %i.fa.fa-star
                  お気に入り　０
              %ul.optional
                %li.optionalBtn
                  = link_to　'#' do
                    %i.fa.fa-flag
                    不適切な商品の通報
          .commentBox
        %ul.links
          %li
            = link_to "#", class: "link" do
              %i.fa.fa-angle-left
              前の商品
          %li
            = link_to "#", class: "link" do
              %i.fa.fa-angle-right
              次の商品
        .relatedItems
          = link_to 'このカテゴリーをもっと見る',"#",class:"link"
          .productLists
            .productList
              = link_to product_path(product.id), method: :get, class: "link" do
                .productList__image
                  %img/
                .productList__body
                  %h3.name
                  .details
                    %ul
                      %li 100円
                      %li
                        %i.fa.fa-star.likeIcon{style: :"user-select: auto;"}
                        ０
                    %p （税込）
  .appBanner
    .inner
      %h2.inner__title　誰でもかんたん、人生を変えるフリマアプリ
      %p.inner__text 今すぐ無料ダウンロード！
      .inner__icon
        = link_to "App Store", '#'
        = link_to "Google", '#'
  %footer.footer
    %ul.contents
      %li.content
        %h2.content__head このアプリについて
        %ul
          %li
            = link_to "会社概要（運営会社）", '#'
          %li
            = link_to "プライバシーポリシー", '#' 
          %li
            = link_to "FURIMA利用規約", '#'
          %li
            = link_to "ポイントに関する特約", '#'   
      %li.content
        %h2.content__head このアプリを見る
        %ul
          %li
            = link_to "カテゴリー一覧", '#'
          %li
            = link_to "ブランド一覧", '#' 
      %li.content
        %h2.content__head ヘルプ＆ガイド
        %ul
          %li
            = link_to "FURIMAガイド", '#'
          %li
            = link_to "FURIMAロゴ利用ガイドライン", '#'
          %li
            = link_to "お知らせ", '#'
    .footer__logo
      = link_to root_path, class: "hed" do
        = image_tag 'logo-white.png'
    %p ©️ FURIMA  
  = link_to new_product_path, class: "product" do
    .purchaseBtn
      %span.purchaseBtn__text{style: :"user-select: auto;"} 出品する
      = image_tag 'icon_camera.png', class: 'purchaseBtn__icon'
