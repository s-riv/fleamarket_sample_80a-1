.login-wrapper
  .login-container
    %ul.signup-box
      %li.signup-font
        %p.not-account
          アカウントをお持ちでない方はこちら
      %li.signup-btn
      = link_to("新規会員登録", new_user_registration_path, {class: "signup_link"})
    %ul.othersite-login
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %li.input-address
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス"
      %li.input-password
        = f.password_field :password, autocomplete: "current-password", placeholder:"パスワード"
      = f.submit "ログイン", class: "login-btn"
      %li.forgot-link
      = link_to("パスワードをお忘れの方", root_path, {class: "forgot-link-page"})
    .login-footer
      %ul.login-footer__bottom
        %li.tail-icon
          = link_to(root_path, {class: "signup_link"}) do
            = image_tag 'logo.png', class: "link_icon", alt: "frima"
        %li.tail-title © FURIMA, Inc.